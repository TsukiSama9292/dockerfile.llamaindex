FROM ubuntu:24.04

# 更新套件清單並安裝必要的工具
RUN apt-get update && \
    apt-get install -y \
    wget \
    bzip2 \
    ca-certificates \
    curl \
    git \
    build-essential \
    libmysqlclient-dev \
    python3-dev \
    && apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# 下載並安裝 Miniconda
RUN wget -qO /tmp/miniconda.sh https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh && \
    bash /tmp/miniconda.sh -b -p /opt/conda && \
    rm /tmp/miniconda.sh

# 設定環境變數
ENV PATH /opt/conda/bin:$PATH

# 初始化 Conda
RUN conda init

# 設定 Conda 配置，避免自動進入 base 環境
RUN conda config --set auto_activate_base false

# 創建新的 Conda 環境
RUN conda create -n llamaindex python=3.10 -y

# 設定環境變數，使 llamaindex 成為預設環境
ENV PATH /opt/conda/envs/llamaindex/bin:$PATH

# 安裝 llama-index 依賴
RUN pip install llama-index && \
    pip install llama-index-llms-ollama && \
    pip install llama-index-embeddings-huggingface

# 安裝 FastAPI 依賴
RUN pip install fastapi fastapi[all] && \
    pip install uvicorn gunicorn && \
    pip install pydantic && \
    pip install mysqlclient sqlalchemy databases alembic && \
    pip install pytest pytest-asyncio

RUN mkdir /app
